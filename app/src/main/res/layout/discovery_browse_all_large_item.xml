<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="photoDto"
            type="com.kkalfas.lorempicsum.discovery.data.PhotoItemDto" />
    </data>


    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="@dimen/browse_all_item_width"
        android:layout_height="@dimen/browse_all_item_height_large"
        app:loadPhoto="@{photoDto.photoUrl}" />
</layout>